package br.com.projetopraticohibernate.model.dao;

import br.com.projetopraticohibernate.model.Cliente;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

/**
 *
 * @author ADM
 */
public class ClienteDao {
    private  SessionFactory conexao;

    public ClienteDao() {
        conexao = new Configuration().configure("hibernate.cfg.xml").buildSessionFactory();
        //conexao = new Configuration().configure().buildSessionFactory();
    }
   public void inserirCliente(Cliente cliente){//iniciar transacao 
       Session session;
       session=conexao.openSession();
       Transaction tx=session.beginTransaction();
       session.save(cliente);
       tx.commit();
       session.close();
   }
   
}
